#!/bin/bash
 
##########################################################
# Config
 
NICK="SETTEST"
SERVER="irc.freenode.net"
PORT=6667
CHANNEL="#linuxdistrocommunity"
NOTICETXT="BASH BOT TEST"

##########################################################
# Main
 
exec 3<>/dev/tcp/${SERVER}/${PORT}
echo "NICK ${NICK}" >&3
echo "USER ${NICK} 8 * : ${NICK}" >&3
echo "JOIN ${CHANNEL}" >&3
#cat <&3
rsstail -i 3 -u "https://www.linuxdistrocommunity.com/forums/syndication.php?fid=1,42,2,3,17,20,5,6,56,39,66,67,68,69,70,29,58,4,62,64,71,10,34,35,36,37,7,21,22,23,24,25,26,50,8,51,11,15,27,31,52,18,55,77,44,78,79,80,81,82,76,74,75,43,59,72,45,46,49,57&limit=1" -l -n 0
while read line
do
	RSS==$line
	#echo "NOTICE ${CHANNEL} NEW FORUM POST $line" >&3
done
 
echo "NOTICE ${CHANNEL} 
NEW FORUM POST: 
${RSS}" >&3
exit $?
